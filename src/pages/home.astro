---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Home">
	<Navbar />
	<main class="min-h-screen bg-brand-background flex items-center justify-center p-8">
		<div class="flex flex-col items-center gap-8">
			<h1 class="text-4xl font-bold text-brand-primary mb-4">Welcome Home</h1>
			
			<div class="flex flex-col sm:flex-row gap-6 items-center">
				<Button variant="dark">Dark Button</Button>
				<Button variant="light">Light Button</Button>
			</div>
			
			<div class="flex flex-col sm:flex-row gap-6 items-center mt-4">
				<Button href="/" variant="dark">Dark Link Button</Button>
				<Button href="/" variant="light">Light Link Button</Button>
			</div>
		</div>
	</main>
</Layout>

