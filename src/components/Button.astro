---
interface Props {
	variant?: 'dark' | 'light';
	href?: string;
	class?: string;
}

const { variant = 'dark', href, class: className = '' } = Astro.props;

const baseClasses = 'inline-flex items-center justify-center gap-2.5 py-3.5 px-5 rounded-button text-button transition-colors';
const variantClasses = {
	dark: 'bg-brand-primary text-brand-white hover:bg-opacity-90',
	light: 'bg-brand-white text-brand-primary hover:bg-opacity-90',
};

const buttonClasses = `${baseClasses} ${variantClasses[variant]} ${className}`;

const Tag = href ? 'a' : 'button';
---

{Tag === 'a' ? (
	<a href={href} class={buttonClasses}>
		<slot />
	</a>
) : (
	<button class={buttonClasses}>
		<slot />
	</button>
)}

